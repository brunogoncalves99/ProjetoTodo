@model List<Item>

<h1 class="mt-5 d-flex justify-content-between align-items-center">
    To Do
    <a asp-controller="Item" asp-action="Add" class="btn btn-primary">Add</a>
</h1>

<ul class="list-group">
    @foreach (Item item in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            @item.Description
            <div>
                <a asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id" class="badge badge-danger">Remove</a>
            </div>
        </li>
    }
</ul>